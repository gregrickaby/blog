{
  "name": "gregrickaby-blog",
  "version": "0.1.0",
  "description": "My blog built on Next.js and hosted at Vercel.",
  "homepage": "https://github.com/gregrickaby/gregrickaby-blog/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregrickaby/gregrickaby-blog.git"
  },
  "author": "Greg Rickaby <gregrickaby@gmail.com>",
  "bugs": {
    "url": "https://github.com/gregrickaby/gregrickaby-blog/issues"
  },
  "private": true,
  "license": "GPL-2.0",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "next build",
    "clean": "rm -rf .next",
    "deploy prod": "vercel --prod",
    "deploy staging": "vercel",
    "dev": "yarn clean && next dev",
    "develop": "yarn dev",
    "export": "next export",
    "format": "npx prettier --config=prettier.config.js '**/*.{js,jsx,ts,tsx,md,mdx,html,css,scss,json}' --write || true",
    "lint": "yarn format && yarn lint:js && yarn lint:css",
    "lint:css": "npx stylelint --config=stylelint.config.js '**/*.css' --fix || true",
    "lint:js": "npx eslint --config=.eslintrc.js ./ --fix || true",
    "start": "next start",
    "postbuild": "next-sitemap",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "next": "latest",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@fec/remark-a11y-emoji": "^3.0.0",
    "@formium/client": "^0.1.3",
    "@formium/react": "^0.1.3",
    "@storybook/addon-a11y": "^6.1.17",
    "@storybook/addon-essentials": "^6.1.16",
    "@storybook/react": "^6.1.16",
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "autoprefixer": "^9",
    "babel-loader": "^8.2.2",
    "classnames": "2.2.6",
    "dayjs": "^1.10.4",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^31.6.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "exifr": "^6.0.0",
    "fraction.js": "^4.0.13",
    "gray-matter": "^4.0.2",
    "husky": "^4.3.8",
    "image-size": "^0.9.3",
    "lint-staged": "^10.5.3",
    "next-mdx-remote": "^2.1.3",
    "next-seo": "^4.19.0",
    "next-sitemap": "^1.4.17",
    "postcss": "^7",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "prism-react-renderer": "^1.1.1",
    "react-google-recaptcha": "^2.1.0",
    "remark-oembed": "^1.2.1",
    "remark-prism": "^1.3.4",
    "storybook-addon-next-router": "^2.0.3",
    "storybook-css-modules-preset": "^1.0.5",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^20.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "use-dark-mode": "^2.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "npx eslint --config=.eslintrc.js --fix",
    "*.{css,scss}": "npx stylelint --config=stylelint.config.js --fix",
    "*.{md,html,json}": "npx prettier --config=prettier.config.js --write"
  }
}
