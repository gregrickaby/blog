{
  "name": "gregrickaby-blog",
  "version": "0.1.0",
  "private": true,
  "description": "My blog built on Next.js and hosted at Vercel.",
  "author": "Greg Rickaby <gregrickaby@gmail.com>",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "next.js",
    "blog"
  ],
  "homepage": "https://github.com/gregrickaby/gregrickaby-blog/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregrickaby/gregrickaby-blog.git"
  },
  "bugs": {
    "url": "https://github.com/gregrickaby/gregrickaby-blog/issues"
  },
  "engines": {
    "node": "14",
    "npm": "7"
  },
  "scripts": {
    "build": "next build",
    "build:images": "sharp --input './public/blog/images/*.{jpg,jpeg,png,gif,webp}' --output './public/optimized' resize '1120'",
    "clean": "rimraf .next",
    "dev": "npm run clean && next dev",
    "export": "next export",
    "format": "npx prettier '**/*.{js,jsx,ts,tsx,md,mdx,html,css,scss,json,yml}' --config=.prettierrc.js --write || true",
    "lint": "npm run format && npm run lint:js && npm run lint:css && npm run lint:md",
    "lint:css": "npx stylelint '**/*.css' --config=.stylelintrc.js --fix || true",
    "lint:js": "next lint",
    "lint:md": "npx markdownlint '**/*.md' --config=.markdownlint.json --fix",
    "postbuild": "next-sitemap",
    "postinstall": "npm run build:images",
    "start": "next start"
  },
  "dependencies": {
    "next": "^11.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.6",
    "@babel/core": "^7.15.0",
    "@fec/remark-a11y-emoji": "^3.1.0",
    "@formium/client": "^0.1.4",
    "@formium/react": "^0.2.0",
    "autoprefixer": "^10.3.3",
    "babel-loader": "^8.2.2",
    "classnames": "2.3.1",
    "dayjs": "^1.10.6",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gray-matter": "^4.0.3",
    "markdownlint": "^0.24.0",
    "markdownlint-cli": "^0.28.1",
    "next-mdx-remote": "3.0.4",
    "next-seo": "^4.26.0",
    "next-sitemap": "^1.6.164",
    "nprogress": "^0.2.0",
    "postcss": "^8.3.6",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.2",
    "prism-react-renderer": "^1.2.1",
    "react-google-recaptcha": "^2.1.0",
    "reading-time": "^1.4.0",
    "remark-oembed": "^1.2.2",
    "remark-prism": "^1.3.6",
    "rimraf": "^3.0.2",
    "sharp": "^0.29.0",
    "sharp-cli": "^1.15.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "tailwindcss": "2.2.9",
    "use-dark-mode": "^2.3.1"
  }
}
