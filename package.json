{
  "name": "@gregrickaby/blog",
  "version": "1.0.0",
  "private": true,
  "description": "My blog.",
  "author": "Greg Rickaby <gregrickaby@gmail.com>",
  "license": "MIT",
  "keywords": [
    "blog"
  ],
  "homepage": "https://gregrickaby.blog",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregrickaby/blog.git"
  },
  "bugs": {
    "url": "https://github.com/gregrickaby/blog/issues"
  },
  "scripts": {
    "build": "next build",
    "build:images": "sharp --input './public/blog/images/*.{jpg,jpeg,png,gif,webp}' --output './public/optimized' resize '1120'",
    "clean": "rimraf .next",
    "dev": "npm run clean && next dev",
    "export": "next export",
    "format": "npx prettier '**/*.{js,jsx,ts,tsx,md,mdx,html,css,scss,json,yml}' --config=.prettierrc.js --write || true",
    "lint": "npm run format && npm run lint:js && npm run lint:css && npm run lint:md",
    "lint:css": "npx stylelint '**/*.css' --config=.stylelintrc.js --fix || true",
    "lint:js": "npx eslint '**/*.{js,ts,jsx,tsx}' --fix || true && next lint",
    "lint:md": "npx markdownlint '**/*.md' --config=.markdownlint.json --fix",
    "postbuild": "next-sitemap",
    "postinstall": "npm run build:images",
    "start": "next start"
  },
  "dependencies": {
    "next": "^12.1.6",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@babel/core": "^7.18.2",
    "@fec/remark-a11y-emoji": "^3.1.0",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.5",
    "classnames": "2.3.1",
    "dayjs": "^1.11.2",
    "eslint": "^8.16.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gray-matter": "^4.0.3",
    "markdownlint": "^0.25.1",
    "markdownlint-cli": "^0.31.1",
    "next-mdx-remote": "3.0.8",
    "next-seo": "^5.4.0",
    "next-sitemap": "^2.5.25",
    "nprogress": "^0.2.0",
    "postcss": "^8.4.14",
    "postcss-preset-env": "^7.6.0",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "prism-react-renderer": "^1.3.3",
    "react-google-recaptcha": "^2.1.0",
    "reading-time": "^1.5.0",
    "remark-oembed": "^1.2.2",
    "remark-prism": "^1.3.6",
    "remark-slug": "^7.0.1",
    "rimraf": "^3.0.2",
    "sharp": "^0.30.6",
    "sharp-cli": "^1.15.0",
    "stylelint": "^14.8.5",
    "stylelint-config-standard": "^25.0.0",
    "tailwindcss": "3.0.24"
  }
}
